extends ../admin_layout

block content
    .margined
        ul
            - each update, i in updates
                .article-item-list
                    h4
                        = update.title
                    .article-item-buttons
                        a(href='/updates/#{update._id}/') Show
                        a(href='/updates/#{update._id}/edit') Edit
                        form(action='/updates/#{update._id}/edit',method='post',enctype='application/x-www-form-urlencoded')
                            input(type='hidden',value='DELETE',name='_method')
                            button(type='submit').
                                Delete
                .divider