extends ../layout

block content
    h1.
        Update ID #{update._id}
    form(action='/updates/#{update._id}/edit',method='post',name='updateupdate',enctype='application/x-www-form-urlencoded')
        p Text: 
            input#inputText(type='text', value='#{update.text}', name='text')
        p 
            input(type='hidden',value='PUT',name='_method')
        p 
            button#btnSubmit(type='submit').
                Update