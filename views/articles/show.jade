extends ../layout

block content
	.row.green.lighten-4
		.col.s3
			.collection
				- each article, i in articles
							a.collection-item.active(href='/articles/#{article._id}') #{article.title}
		.col.s9.white
			.article-item
						img(src='#{article_current.Image1}', alt='http://placehold.it/250x250')
						h3
							= article_current.title
						span Author Name - BLOGS
						p
							= article_current.text
							br
							br
						img(src='#{article_current.Image2}', alt='http://placehold.it/450x250')
						img(src='#{article_current.Image3}', alt='http://placehold.it/450x250')
						img(src='#{article_current.Image4}', alt='http://placehold.it/450x250')
						img(src='#{article_current.Image5}', alt='http://placehold.it/450x250')