extends ../layout

block content
	.row.green.lighten-4
		.col.s3
			.collection.articles-nav
				- each article, i in articles
							a.collection-item(href='/articles/#{article._id}') #{article.title}
		.col.s9.white
			.article-item
						img(src='#{article_current.image1_url}', alt='http://placehold.it/250x250')
						h3
							= article_current.title
						span Author Name
						p
							!{article_current.text}
							br
							br
						img(src='#{article_current.image2_url}', alt='http://placehold.it/450x250')
						img(src='#{article_current.image3_url}', alt='http://placehold.it/450x250')
						img(src='#{article_current.image4_url}', alt='http://placehold.it/450x250')
						img(src='#{article_current.image5_url}', alt='http://placehold.it/450x250')
						p#article-type.hidden
							= article_current.blog_or_news