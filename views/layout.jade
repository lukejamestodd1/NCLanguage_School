          //- Teachers' area
          li
            a(id="contact" href='/contact') 联系方法
          //- Contact
        a.button-collapse(href='#', data-activates='nav-mobile')
          i.material-icons menu
    #index-banner.parallax-container
      .section.no-pad-bot.row
        .button-container
          a.waves-effect.waves-light.btn.button-right(href='/english')
            i.material-icons.right language
            | English
        .container
          br
          br
          h1.header.center.red-text.text-darken-4.res-text #{title}
          .row.center
            h5.header.col.s12.light.flow-text #{subtitle}
      .parallax
        img(src='../images/3.jpeg', alt='Unsplashed background img 1')


